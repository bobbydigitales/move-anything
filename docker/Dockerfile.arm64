# Build environment for Move Anything (ARM64 GNU/Linux)
# Works with Docker Desktop or OrbStack on macOS
FROM --platform=linux/arm64 debian:bookworm

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    build-essential \
    pkg-config \
    git \
    file \
    python3 \
    xz-utils \
    ca-certificates && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

CMD ["bash"]
